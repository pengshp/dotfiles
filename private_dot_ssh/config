Host *
	StrictHostKeyChecking no
    UserKnownHostsFile=/dev/null
    ForwardAgent yes
    ServerAliveInterval 10
    ServerAliveCountMax 10000
    TCPKeepAlive no
    ControlMaster auto
    ControlPath ~/.ssh/session/%h-%p-%r
    ControlPersist 12h


Host esxi-arch
    hostname 172.16.10.18
    user xdl
    port 22
    identityfile ~/.ssh/id_rsa

